{% extends "skeleton.njk" %}

{% block stylesheet %}
<link rel="stylesheet" href="/static/css/category.css">
{% endblock %}

{% block body %}
<div class="background"></div>

<a href="/">
    <img id="logo" alt="Olga Anastasia Art Logo" src="/static/img/logo-oneline-oaa_cloud.png">
</a>
<h2><span class="underline">{{ category }}</span> section</h2>

<section class="portfolio">

{% for preview in preview_uris %}
    <div class="poster">
        <img alt="Art piece from the {{ category }} category" src="{{ preview }}">
    </div>
{% else %}
    <h2>No pictures in the category "{{ category }}"</h2>
    <h3><a href="category/">Try a random category</a> or <a href="/">return home</a></h3>
{% endfor %}

</section>

{% endblock %}
